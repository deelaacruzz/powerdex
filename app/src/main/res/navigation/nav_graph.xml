<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.powerdex.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/view_splash">
        <action
            android:id="@+id/action_splashFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.powerdex.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/view_menu_fragment">
        <action
            android:id="@+id/action_menuFragment_to_infoHeroFragment"
            app:destination="@id/infoHeroFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoHeroFragment"
        android:name="com.example.powerdex.menu.infoHeroe.InfoHeroFragment"
        android:label="MenuFragment"
        tools:layout="@layout/view_info_hero_fragment">
    </fragment>



</navigation>